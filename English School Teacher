import java.io.*;
import java.util.*;
public class Solution {
    public static void main(String[] args) {
        Scanner s=new Scanner(System.in);
        String str=s.nextLine();
        String res[]=str.split(" ");
        int max=res[0].length();
        for(int i=0;i<res.length;i++){
            if(res[i].length()>max){
                max=res[i].length();
            }
        }
        System.out.print(max);
    }
}
